{
  "name": "beam_flow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.1",
    "autoprefixer": "^10.4.21",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.0.14"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run commitlint",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
}
